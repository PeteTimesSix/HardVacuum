<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/HediffGiverSetDef[defName="OrganicStandard"]/hediffGivers/li[@Class="HediffGiver_VacuumBurn"]</xpath>
  		<attribute>Class</attribute>
		<value>PeteTimesSix.HardVacuum.HediffGiver_HardVacuumBurn</value>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/HediffDef[defName="VacuumExposure"]/lethalSeverity</xpath>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/HediffDef[defName="VacuumExposure"]</xpath>
		<value>
			<maxSeverity>1.0</maxSeverity>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/HediffDef[defName="VacuumExposure"]/stages</xpath>
		<value>
			<stages>
			  <li>
				<label>initial</label>
				<becomeVisible>false</becomeVisible>
			  </li>
			  <li>
				<label>initial</label>
				<minSeverity>0.02</minSeverity>
				<capMods>
				  <li>
					<capacity>Breathing</capacity>
					<setMax>0.50</setMax>
				  </li>
				</capMods>
			  </li>
			  <li>
				<label>mild</label>
				<minSeverity>0.1</minSeverity>
				<capMods>
				  <li>
					<capacity>Consciousness</capacity>
					<postFactor>0.9</postFactor>
				  </li>
				  <li>
					<capacity>Breathing</capacity>
					<setMax>0.10</setMax>
				  </li>
				</capMods>
				<painOffset>0.1</painOffset>
			  </li>
			  <li>
				<label>moderate</label>
				<minSeverity>0.2</minSeverity>
				<capMods>
				  <li>
					<capacity>Consciousness</capacity>
					<postFactor>0.5</postFactor>
					<setMax>0.6</setMax>
				  </li>
				  <li>
					<capacity>Breathing</capacity>
					<setMax>0.10</setMax>
				  </li>
				</capMods>
				<painOffset>0.2</painOffset>
			  </li>
			  <li>
				<label>debilitating</label>
				<minSeverity>0.35</minSeverity>
				<capMods>
				  <li>
					<capacity>Consciousness</capacity>
					<postFactor>0.25</postFactor>
					<setMax>0.3</setMax>
				  </li>
				  <li>
					<capacity>Breathing</capacity>
					<setMax>0.10</setMax>
				  </li>
				</capMods>
				<painOffset>0.3</painOffset>
			  </li>
			  <li>
				<label>extreme</label>
				<minSeverity>0.5</minSeverity>
				<capMods>
				  <li>
					<capacity>Consciousness</capacity>
					<setMax>0.10</setMax>
				  </li>
				  <li>
					<capacity>Breathing</capacity>
					<setMax>0.10</setMax>
				  </li>
				</capMods>
				<painOffset>0.5</painOffset>
			  </li>
			  <li>
				<label>lethal</label>
				<minSeverity>0.9</minSeverity>
				<capMods>
				  <li>
					<capacity>Consciousness</capacity>
					<setMax>0.10</setMax>
				  </li>
				  <li>
					<capacity>Breathing</capacity>
					<setMax>0.10</setMax>
				  </li>
				</capMods>
				<painOffset>0.75</painOffset>
			  </li>
			</stages>
		</value>
	</Operation>
</Patch>